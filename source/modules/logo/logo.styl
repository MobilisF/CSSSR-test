.logo
	&
	&:visited
		line-height 1
		font-size 30px
		text-decoration none
		display inline-block

	&:hover &__icon
		animation heartbeat 2.5s infinite
		+below(750px)
			animation none

	&__name
	&__icon
		display inline-block
		vertical-align middle


	&__name
		font-family notoserif
		color #fff

	&__icon
		margin-right 4px
		color #e74c3c
		size 27px

		+below(750px)
			animation heartbeat 2.5s infinite 5s


